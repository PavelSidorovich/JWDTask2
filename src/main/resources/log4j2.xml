<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Properties>
    <Property name="basePath">logs\\</Property>
  </Properties>

  <Appenders>
    <RollingFile name="loggerFile" fileName="${basePath}/app-info.log"
                 filePattern="${basePath}/app-info-%d{yyyy-MM-dd}.log">
            <PatternLayout>
              <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
    </RollingFile>

    <Console name="Console" target="SYSTEM_OUT">
      <!-- <PatternLayout pattern="%d %-5level [%t] %c{1.}.%M(%L): %msg%n"/> -->
      <PatternLayout disableAnsi="false"
                     pattern="%highlight{%d{HH:mm:ss} %-5level %logger{36}.%M() @%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>
    </Console>

<!--    <File name="MyFile" fileName="${basePath}/additional.log" immediateFlush="false" append="false">-->
<!--      <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>-->
<!--    </File>-->
  </Appenders>

  <Loggers>
    <Logger name="com.epam.jwd" level="trace" additivity="true">
      <appender-ref ref="loggerFile" level="debug"/>
    </Logger>

    <Root level="TRACE">
      <AppenderRef ref="Console"/>
<!--      <AppenderRef ref="MyFile"/>-->
    </Root>
  </Loggers>
</Configuration>
